{
	"name": "pino-noir",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "babel --out-dir=dist source",
		"build:dev": "babel --out-dir=dist --watch src",
		"dev": "babel --out-dir=dist --watch src",
		"dev:ui": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-import-meta-resolve\" nodemon  dist/cli.js  --watch dist --no-stdin -- --loader=import-jsx",
		"scratchpad": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-import-meta-resolve\" nodemon  dist/scratchpad.js  --watch dist --no-stdin -- --loader=import-jsx",
		"generator": "nodemon tools/log-generator.js --watch tools",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@logdna/tail-file": "^3.0.1",
		"@uidotdev/usehooks": "^2.0.1",
		"get-caller-file": "^2.0.5",
		"ink": "^4.1.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"meow": "^11.0.0",
		"pino": "^8.14.1",
		"react": "^18.2.0",
		"reblessed": "^0.2.1",
		"rxjs": "^7.8.1",
		"split2": "^4.2.0",
		"stream-chain": "^2.2.5",
		"stream-fork": "^1.0.5",
		"stream-json": "^1.8.0",
		"tail": "^2.2.6"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.0",
		"@babel/preset-react": "^7.18.6",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"esm": "^3.2.25",
		"import-jsx": "^5.0.0",
		"ink-testing-library": "^3.0.0",
		"pino-pretty": "^10.0.1",
		"prettier": "^2.8.7",
		"xo": "^0.53.1"
	},
	"ava": {
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		},
		"nodeArguments": [
			"--loader=import-jsx"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"babel": {
		"presets": [
			"@babel/preset-react"
		],
		"sourceMaps": "inline",
		"retainLines": true
	}
}